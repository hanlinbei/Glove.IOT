    <script>
        //更新左上角用户信息
        userMessage();
        $('button[name="重新填写"]').click(function () {//清空内容 重新填写
            $(':input', '.layui-form').val('');
        })
        $('button[name="修改密码"]').click(function () {//修改密码按钮
            if ($('input[name="pwd"]').val() === '') {
                $('input[name="pwd"]').attr('placeholder', '请输入密码');
                $('input[name="pwd"]').addClass("red");
            }
            else if ($('input[name="newPwd"]').val() === '') {
                $('input[name="newPwd"]').attr('placeholder', '请输入新密码');
                $('input[name="newPwd"]').addClass("red");
            }
            else if ($('input[name="reNewpwd"]').val() === '') {
                $('input[name="reNewpwd"]').attr('placeholder', '请再次输入新密码');
                $('input[name="reNewpwd"]').addClass("red");
            }
            else if ($('input[name="newPwd"]').val() !== $('input[name="reNewpwd"]').val()) {
                $('.reNewpwderror').show();
            }
            else {
                $.post("/UserInfo/EditPwd", { oldPwd: $('input[name="pwd"]').val(), newPwd: $('input[name="newPwd"]').val() }, function (data) {
                    if (data === "true") {
                        layui.use('layer', function (data) {
                            var layer = layui.layer;
                            layer.msg('<span style="font-size:24px;vertical-align:middle;line-height:76px;">修改密码成功</span>', {
                                time: 2000,
                                area: ['200px', '100px'],
                                shade: 0.4,
                                shadeClose: true
                            });
                        });
                        $(':input', '.layui-form').val('');
                    }
                    else if (data === "false") {
                        layui.use('layer', function (data) {
                            var layer = layui.layer;
                            layer.msg('<span style="font-size:24px;vertical-align:middle;line-height:76px;">原密码错误</span>', {
                                time: 2000,
                                area: ['200px', '100px'],
                                shade: 0.4,
                                shadeClose: true
                            });
                        });
                    }
                })
            }
        })
        //聚焦时删除提示
        $('input[name="pwd"]').focus(function () {
            $('input[name="pwd"]').removeClass("red");
            $('input[name="pwd"]').removeAttr('placeholder');
        })
        $('input[name="newPwd"]').focus(function () {
            $('input[name="newPwd"]').removeClass("red");
            $('input[name="newPwd"]').removeAttr('placeholder');
            $('.reNewpwderror').hide();
        })
        $('input[name="reNewpwd"]').focus(function () {
            $('input[name="reNewpwd"]').removeClass("red");
            $('input[name="reNewpwd"]').removeAttr('placeholder');
            $('.reNewpwderror').hide();
        })
    </script>
